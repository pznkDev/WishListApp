<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_movie_main"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/m_main" />

            <TextView
                android:id="@+id/tv_main_seen_movie_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/image_movie_main"
                android:layout_marginBottom="@dimen/general_less"
                android:layout_marginLeft="@dimen/main_margin"
                android:layout_marginTop="@dimen/general_less"
                android:textSize="25sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tv_main_unseen_movie_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/image_movie_main"
                android:layout_marginBottom="@dimen/general_less"
                android:layout_marginRight="@dimen/main_margin"
                android:layout_marginTop="@dimen/general_less"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/image_book_main"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/tv_main_seen_movie_count"
                android:scaleType="centerCrop"
                android:src="@drawable/b_main" />

            <TextView
                android:id="@+id/tv_main_read_book_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_book_main"
                android:layout_marginLeft="@dimen/main_margin"
                android:layout_marginTop="@dimen/general_less"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_main_unread_book_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/image_book_main"
                android:layout_marginRight="@dimen/main_margin"
                android:layout_marginTop="@dimen/general_less"
                android:textSize="25sp"
                android:textColor="@color/black"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/tv_main_read_book_count"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="@dimen/general_less"
                android:layout_marginRight="@dimen/general_less"
                android:background="@color/colorAccent" />

            <TextView
                android:id="@+id/tv_main_note_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_main_read_book_count"
                android:layout_marginLeft="@dimen/main_margin"
                android:layout_marginTop="33dp"
                android:textSize="25sp"
                android:textColor="@color/black" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>